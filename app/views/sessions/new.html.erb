<h1>Log in</h1>
<%= form_with url: login_path do |form| %>
  <div class="mb-3">
    <%= form.label :email %>
    <%= form.text_field :email, class: "form-control text-muted", placeholder: "exemple@website.com"%>
  </div>
  <div class="mb-3">
    <%= form.label :password %>
    <%= form.password_field :password, class: "form-control" %>
    <%= link_to "Forgot your password", password_reset_path  %>
  </div>
    <div class="mb-3">
    <%= form.submit "Log in", class: "btn btn-dark" %>
  </div>
<% end %>